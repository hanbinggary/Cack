.container {
  width: 100%;
  height: 100%;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 32px;
  background: #fff;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.user-nickname {
  padding: 16rpx;
  font-size: 36rpx;
}

.statistic {
  display: flex;
  justify-content: space-evenly;
  width: 100%;
  padding: 16px 24px;
}

.statistic-item {
  text-align: center;
}

.statistic-item-label {
  margin-top: 3px;
  color: #8F9BB3;
  font-size: 28rpx;
}

/* 菜单列表 */
.menu-list {
  padding-top: 24px;
  background: #fff;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px 24px;
}

.menu-item:not(:last-child) {
  border-bottom: 1px solid rgb(245, 245, 245);
}

.menu-item:active {
  background: #eee;
}

.menu-item-content {
  display: flex;
  align-items: center;
}

.menu-item-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12px;
}

.menu-item-right-arrow {
  width: 40rpx;
  height: 40rpx;
}

/* 消息通知 徽标 */
.menu-has-badage {
  position: relative;
}

.notify-badage {
  position: absolute;
  left: 182rpx;
  top: -8px;
  padding: 3px 8px;
  font-size: 22rpx;
  color: #fff;
  border-radius: 20px;
  background: #fa4940;
}