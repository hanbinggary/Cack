.container {
  width: 100%;
  height: 100%;
  /* background: #fff; */
}

.position-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 24rpx;
  padding: 10rpx 12rpx;
  background: rgb(236, 236, 236);
  border-radius: 6rpx;
}

.position-wrap:active {
  background-color: rgba(219, 219, 219, 0.6);
}

.location {
  display: flex;
  align-items: center;
}

.location-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
}

.location-addr {
  font-size: 26rpx;
}

.distance {
  padding-right: 16rpx;
  font-size: 20rpx;
  color: #8F9BB3;
}

/* 待车检或车检中的统计 */
.vehicle-status-list {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 24px 24rpx 32px;
  column-gap: 16px;
}

.vehicle-status-item {
  flex: auto;
  padding: 16px 24px;
  border-radius: 16px;
  background: #fff;
  box-shadow: 0 2px 8px rgba(0, 0, 0, .1);
}

.vehicle-status-label {
  font-size: 28rpx;
  color: #333;
}

.vehicle-status-total {
  font-size: 64rpx;
  font-weight: bold;
}

/* 预约按钮 */
.booking-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 128rpx;
  margin: 24rpx;
  margin-bottom: 32px;
  border-radius: 18rpx;
  background: #1890ff;
  box-shadow: 0 1px 8px rgba(24, 143, 255, 0.8);
  color: #fff;
  cursor: pointer;
}

.booking-btn:active {
  background-color: #1890ffcc;

}

.booking-btn-text {
  font-size: 38rpx;
  font-weight: bold;
  letter-spacing: 16px;
}

/* 待车检或车检中车辆列表 */
.inspection-list {
  padding: 0 24rpx;
}

.inspection-item {
  margin-bottom: 12px;
}

.inspection-item-header {
  padding: 20px 16px;
  border-radius: 12px;
  background: #fff;
}

.inspection-item-order-no {
  font-size: 26rpx;
  color: #8c8c8c;
}

.inspection-item-plate-no {
  padding-top: 6px;
  font-size: 46rpx;
  color: #1b1b1b;
  font-weight: bold;
}

.divider-container {
  padding: 0 10px;
}

.divider-wrapper {
  padding: 1px;
  background: #fff;
}

.divider-line {
  width: 100%;
  height: 2px;
  border-top: 2px dashed #e9e9e9;
}

.inspection-item-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 16px;
  border-radius: 12px;
  background: #fff;
}

.inspection-content-info-label {
  font-size: 26rpx;
  color: #cfcfcf;
}

.inspection-content-info-text {
  padding: 3px 0 12px;
  font-size: 28rpx;
  font-weight: bold;
}

.inspection-flow-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 22px;
  text-align: center;
}

.inspection-flow-item-sign-raedy,
.inspection-flow-item-sign-checking,
.inspection-flow-item-sign-detault {
  position: relative;
  width: 20rpx;
  height: 20rpx;
  margin-right: 24px;
  border-radius: 50%;
}

.inspection-flow-item-sign-detault {
  background: #d8d8d8;
  box-shadow: 0 1px 6px #d8d8d8;
}

.inspection-flow-item-sign-raedy {
  background: orange;
  box-shadow: 0 1px 6px orange;
}

.inspection-flow-item-sign-checking {
  background: #1890ff;
  box-shadow: 0 1px 6px #1890ff;
}

/* .inspection-flow-item-sign-raedy::after, */
.flow-dot-bottom::after {
  position: absolute;
  top: 34rpx;
  left: 7rpx;
  content: "";
  display: block;
  width: 6rpx;
  height: 6rpx;
  background: #d8d8d8;
  border-radius: 50%;
}

/* .inspection-flow-item-sign-checking::before, */
.flow-dot-top::before {
  position: absolute;
  top: -16rpx;
  left: 7rpx;
  content: "";
  display: block;
  width: 6rpx;
  height: 6rpx;
  background: #d8d8d8;
  border-radius: 50%;
}

.inspection-flow-item-text {
  color: #c4c4c4;
  font-size: 26rpx;
  font-weight: bold;
}

.inspection-flow-item-text-active {
  color: #2a2a2a;
}