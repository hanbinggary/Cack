.container {
  width: 100%;
  height: 100%;
  background-color: #fff;
  overflow: hidden;
}

.vehicle-wrap {
  padding: 48rpx 32rpx;
}

.vehicle-title {
  margin-bottom: 16px;
  font-size: 33rpx;
  font-weight: bold;
}

/* 车辆显示列表 */
.vehicle-list {
  max-height: 68vh;
  padding: 0 20rpx;
  overflow: scroll;
}

.vehicle-item {
  padding: 18rpx 24rpx;
  font-size: 26rpx;
  background-color: #f5f4f4;
  border-radius: 4px;
  border: 1px solid transparent;
}

.vehicle-item:not(:last-child) {
  margin-bottom: 16px;
}

.vehicle-item-title {
  margin-bottom: 4px;
}

.vehicle-item-plateno {
  margin-right: 6px;
  font-weight: bold;
}

.vehicle-item-type {
  font-size: 22rpx;
  color: #8F9BB3;
}

.vehicle-item-other-text {
  font-size: 24rpx;
  color: rgb(145, 145, 145);
}

.vehicle-item-selected {
  background-color: rgb(214, 255, 228);
  border-color: rgb(94, 221, 157);
}