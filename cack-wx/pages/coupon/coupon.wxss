.container {
  width: 100%;
  height: 100%;
  overflow: hidden;
  background-color: #fff;
}

.coupon-wrap {
  padding: 48rpx 32rpx;
}

.coupon-title {
  margin-bottom: 16px;
  font-size: 33rpx;
  font-weight: bold;
}

/* 优惠券列表 */
.coupons-list {
  max-height: 68vh;
  overflow: scroll;
}

.coupons-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 16px;
  border-radius: 8px;
  background: linear-gradient(to top right, #fef7ef, #fef5f0);
  color: #ff1717;
}

.coupons-item:not(:last-child) {
  margin-bottom: 16px;
}

.coupons-item-info {
  display: flex;
  align-items: center;
}

.money-symbol {
  font-size: 52rpx;
  vertical-align: bottom;
}

.money-value {
  margin-right: 16px;
  font-size: 64rpx;
  font-weight: bold;
}

.coupons-item-desc-title {
  margin-bottom: 4px;
  font-size: 34rpx;
  font-weight: bold;
}

.coupons-item-desc-expired-time {
  font-size: 24rpx;
}


/* 空 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 32px;
  border-radius: 4px;
  background: #eee;
}

.empty-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 8px;
}

.empty-text {
  font-size: 28rpx;
  color: #767676;
}